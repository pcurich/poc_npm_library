{
  "name": "@pcurich/client-storage",
  "version": "3.0.0",
  "description": "Este paquete es una librería npm que abstrae almacenamiento (IndexedDB, local/session/memory storage) y utilidades para entornos (lectura/depuración de variables de entorno).",
  "type": "module",
  "types": "lib/types/index.d.ts",
  "main": "lib/index.cjs",
  "module": "lib/index.mjs",
  "exports": {
    "import": {
      "default": "./lib/index.esm.js",
      "types": "./lib/types/index.d.ts"
    },
    "require": {
      "default": "./lib/index.cjs",
      "types": "./lib/types/index.d.ts"
    }
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rollup -c",
    "release-package": "npm run build && npx changeset publish",
    "build:types": "tsc -p tsconfig.json",
    "pack:tgz": "npm run build && npm run build:types && npm pack",
    "build:examples": "tsc -p tsconfig.build.json && node scripts/fix-import-extensions.js lib && node --enable-source-maps lib/example/http-mock-test.js",
    "build:examples-only": "tsc -p tsconfig.build.json && node scripts/fix-import-extensions.js lib",
    "run:print-env": "npm run build:examples && node --enable-source-maps lib/example/print-env.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pcurich/poc_npm_library"
  },
  "author": "pedro curich",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pcurich/poc_npm_library"
  },
  "homepage": "https://github.com/pcurich/poc_npm_library#readme",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@rollup/plugin-commonjs": "^28.0.9",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/node": "^24.9.2",
    "fake-indexeddb": "^6.2.4",
    "rollup": "^4.52.4",
    "rollup-plugin-delete": "^3.0.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
