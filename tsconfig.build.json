{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "lib/types",
    "noEmit": false,
    "emitDeclarationOnly": false,    
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,    
    "module": "ESNext",
    "sourceMap": true,
    
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules","lib", "dist"]
}